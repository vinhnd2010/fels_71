<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to t("users"), "#" %></li>
          <li class = "dropdown">
            <a href = "#" class = "dropdown-toggle" data-toggle = "dropdown"><%= t("user.account") %>
             <b class = "caret"></b>
            </a>
            <ul class = "dropdown-menu">
              <li><%= link_to t("user.profile"), "#" %></li>
              <li><%= link_to t("user.setting"), "#" %></li>
              <li><%= link_to t("help"), help_path %></li>
              <li>
                <%= link_to t("user.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
