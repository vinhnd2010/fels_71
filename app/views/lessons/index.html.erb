<% provide :title, t("lesson.all_learned_lesson") %>

<div class="col-md-6 col-md-offset-3">
  <div class="list-group">
    <div class="list-group-item list-group-item-info">
      <h2 class="list-group-item-heading">
        <%= t "lesson.all_learned_lesson" %>
      </h2>
      <p class="list-group-item-text">
        <ul class="list-group">
          <li class="list-group-item">
            <% current_user.lessons.each do |lesson| %>
              <%= link_to t("lesson.lesson_x", x: lesson.id),
                category_lesson_path(category_id: lesson.category.id, id: lesson.id) %>
              <hr>
            <% end %>
          </li>
        </ul>
      </p>
    </div>
  </div>
</div>

<div class="clear"></div>
